<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.ipartek.formacion</groupId>
    <artifactId>Agenda</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>agenda-ear</artifactId>
  <packaging>ear</packaging>
   <properties>
   <maven-compiler-plugin>2.5.1</maven-compiler-plugin>
    <project.version>0.0.1-SNAPSHOT</project.version>
    <artifact.ejb>agenda-ejb</artifact.ejb>
    <artifact.war>agenda-spring</artifact.war>
    <artifact.jar>agenda-common</artifact.jar>
    <java.version>1.6</java.version>
  </properties>
  <dependencies>
     <dependency>
        <groupId>com.ipartek.formacion</groupId>
        <artifactId>${artifact.ejb}</artifactId>
        <version>${project.version}</version>
        <type>ejb</type>
    </dependency>
 
    <dependency>
        <groupId>com.ipartek.formacion</groupId>
        <artifactId>agenda-spring</artifactId>
        <version>${project.version}</version>
        <type>war</type>
    </dependency>
    <!--    -->
    <dependency>
        <groupId>com.ipartek.formacion</groupId>
        <artifactId>${artifact.jar}</artifactId>
        <version>${project.version}</version>
        <type>jar</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                  <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                    <!--                          -->
                        <webModule>
                            <groupId>com.ipartek.formacion</groupId>
                            <bundleFileName>agenda-web.war</bundleFileName>
                            <artifactId>${artifact.war}</artifactId>
                            <contextRoot>agenda</contextRoot>
                        </webModule>

                        <ejbModule>
                            <groupId>com.ipartek.formacion</groupId>
                            <bundleFileName>agenda-ejb.jar</bundleFileName>
                            <artifactId>${artifact.ejb}</artifactId>
                        </ejbModule>
                    </modules>          
                    <displayName>agendaear</displayName>
                    <!-- If I want maven to generate the application.xml, set this to true -->
                    <generateApplicationXml>true</generateApplicationXml>
                </configuration>
            </plugin>
    </plugins>
  </build>
</project>